<script type="text/javascript">
\$LAB.script("usermanagement/js/usermanagement.js");
</script>


#filter CleanOutput

#set $targetView = ""

#if $document.href.split("/")[-1].find("UserSettingsModify") == -1
  #set $targetView = "UserSettingsModify"
#end if

<form class="usersettings" action="${targetView}" method="POST">
<input type="hidden" name="name" value="$object.name"/>

<fieldset class="fieldset_heading">
  <table>
   <tr>
    <th style="vertical-align: middle;">$_("Login:")</th>
    <td style="text-align:right; vertical-align: middle;">
     <h2 style="vertical-align: middle; padding:0px; margin:0px;"><b>$object.name</b></h2>
    </td>
   </tr>

<tr>
    <th>$_("Name:")</th>
    <td style="text-align: right;"><input type="text" name="fullname" value="$fullname"/></td>
</tr>
<tr>
    <th>$_("Email:")</th>
    <td style="text-align: right;"><input type="text" name="email" value="$email"/></td>
</tr>

<tr>
    <th style="vertical-align: middle;">$_("Language:")</th>
    <td style="text-align:right; vertical-align: middle;">
     <select name="language">
#for $lang, $identifier in $available_languages
#if $language == $identifier
    #set $selected=" selected=\"selected\""
#else
    #set $selected=""
#end if
     <option value="$identifier"$selected>$lang</option>
#end for
     </select>
    </td>
</tr>

<tr>
    <th style="vertical-align: middle;">$_("Theme:")</th>
    <td style="text-align:right; vertical-align: middle;">
     <select name="theme">
#for $theme in $available_themes
#set $selected = ""
#if $theme == $user.theme
    #set $selected = "selected=\"selected\""
#end if
 <option value="$theme" $selected>$theme</option>
#end for
     </select>
    </td>
</tr>

</table>

</fieldset>


<input class="widget-control usersettings cancel" type="button" value="$_('Cancel')" />
<input class="widget-control usersettings submit" type="submit" value="$_('Save')" />
</form>

#end filter
