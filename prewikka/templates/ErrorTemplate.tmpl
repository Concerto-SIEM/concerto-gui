#extends prewikka.templates.TopLayout

#block toplayout_content

 <div id="fieldset_page" style="position: relative; margin: 0px auto; margin-top: 150px; width:500px; height: 300px;">
  <fieldset style="text-align: center; vertical-align: middle;">
   <legend class="error_name">$name</legend>
   <p><b>$message</b></p>
   Failed query: <input type="text" value="$query" style="width: 200px;" />

   <br/><br/>

   <input style="float: left; position: relative;" type="button" value="Back"/><input style="float: right; position: relative;" type="button" value="Retry"/>
  </fieldset>
 </div>

#end block toplayout_content
