#extends prewikka.templates.HTMLDocument

#block body
<body class='normal_body'>
	<div id='top_view'>
		<div id='top_view_header'>
			<div id="top_view_header_software">$info.software</div>
			<div id="top_view_header_place">$info.place</div>
			<div id="top_view_header_title">$info.title</div>
		</div>
		<div class="login_password">
			<table>
				<form action='?' method='POST'>
					<input type='hidden' name='action' value='$login_action'/>
					<tr>
						<td>Login:</td>
						<td><input type='text' name='login'/></td>
					</tr>
					<tr>
						<td>Password:</td>
						<td><input type='password' name='password'/></td>
					</tr>
					<tr>
						<td collspan='2'>
							<input type='submit' value="ok"/>
						</td>
					</tr>
				</form>
			</table>
		</div>
	</div>
</body>
#end block body
